# rvm configuration
#
# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overwritten.
#
<% if @root_install -%>
umask g+w
<% end -%>
export rvm_path="<%= @rvm_path %>"

<% unless @rvm_gem_options.empty? -%>
export rvm_gem_options="<%= @rvm_gem_options %>"
<% end -%>
<% @rvmrc.each_pair do |k,v| -%>
export <%= k %>=<%= v %>
<% end -%>
